#:kivy 1.0.9

<CluePiece>:
    canvas:
        Ellipse:
            source: 'images/white.png'
            size: self.size
            pos: self.pos

<ClueBoard>:
    canvas:
        Rectangle:
            source: 'images/ScanBoardSmall.jpg'
            pos: self.pos
            size: self.size

<ClueGame>:
    white: clue_piece
    canvas:
        Rectangle:
            size: self.size
            pos: self.pos     

    CluePiece:
        id: clue_piece
        size: (root.height*(3/100), root.height*(3/100))

    ClueBoard:
        id: clue_board
        size: root.size #(root.height, root.height) if (root.width > root.height) else (root.width, root.width) 
        center: root.center
        #scale: 1, 1