#:kivy 1.0.9

<ClueGame>:
    id: board
    white: clue_piece
    canvas:
        Rectangle:
            size: (self.height, self.height) if self.width > self.height else (self.width, self.width)
            source: 'images/ScanBoardSmall.jpg'
            pos: self.pos
    CluePiece:
        id: clue_piece
        center: self.parent.center
        size: (root.height*(3/100), root.height*(3/100)) if root.width > root.height else ((root.width*(3/100), root.width*(3/100)))
        canvas:
            Ellipse:
                source: 'images/white.png'
                size:self.size
                pos:self.pos


