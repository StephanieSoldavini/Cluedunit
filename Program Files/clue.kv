#:kivy 1.0.9

<CluePiece>:
    canvas:
        Ellipse:
            source: 'images/white.png'
            pos: root.pos
            size: (850 * (.03), 850 * (.03))

<ClueBoard>:
    canvas:
        Rectangle:
            source: 'images/ScanBoardSmall.jpg'
            pos: self.parent.pos
            size: self.size

<ClueGame>:
    white: clue_piece
    canvas:
        Rectangle:
            size: self.size
            pos: self.pos     

    ClueBoard:
        id: clue_board
        size: (root.height, root.height) if (root.width > root.height) else (root.width, root.width) 
        center: root.center
        #scale: 1, 1

    CluePiece:
        id: clue_piece
        pos: 582.25, 21.75
        size: (self.parent.height*(30/100), self.parent.width*(30/100))